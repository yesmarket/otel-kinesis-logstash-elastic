{
   "serilog": {
      "minimumLevel": {
         "using": [ "Serilog.Sinks.Console" ],
         "default": "Information",
         "override": {
            "Microsoft": "Error",
            "system": "Error"
         }
      },
      "writeTo": [
        {
          "name": "Console",
          "args": {
            "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
          }
        },
        {
          "name": "File",
         "args": {
            "path": "/var/log/log.txt",
            "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
            "rollingInterval": "Day"
         }
        }
      ],
      "enrich": [ "FromLogContext", "WithMachineName", "WithAssemblyName", "WithAssemblyVersion", "WithCorrelationId" ]
   }
}
